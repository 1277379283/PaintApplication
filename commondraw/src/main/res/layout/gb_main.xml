    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gb_function_layout_height"
        android:background="@color/gb_function_bar_bg" >
		<include layout="@layout/gb_selection_mode"/>
        <include layout="@layout/gb_draw_mode" />
    </FrameLayout>

    <com.jacky.commondraw.views.doodleview.DoodleView
        android:id="@+id/doodleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:background="@android:color/white" >
    </com.jacky.commondraw.views.doodleview.DoodleView>

</LinearLayout>